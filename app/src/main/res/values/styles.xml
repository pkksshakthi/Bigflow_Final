<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/backgroud</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/ripple</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ButtonTheme" parent="">
        <item name="colorControlNormal">@color/nav_divider_color</item>
        <item name="colorControlHighlight">@color/nav_divider_color</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PrimaryText">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="SecondaryText">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#777777</item>
    </style>

    <style name="ListHeaderText">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="ListItemText">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#777777</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="HorizontalLine">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/nav_divider_color</item>
    </style>

    <style name="VerticalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/nav_divider_color</item>
    </style>
</resources>
